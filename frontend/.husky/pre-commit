#!/bin/sh
# Check for console.log in staged files within frontend/src
matches=$(git grep --cached -n "console.log" -- "frontend/src")

if [ -n "$matches" ]; then
  echo "‚ùå Frontend Commit failed: 'console.log' found in the following frontend files:"
  echo "$matches"
  echo ""
  echo "Please remove console.log statements before committing."
  exit 1
fi
